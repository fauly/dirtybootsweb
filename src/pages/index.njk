<!-- First Section: Line of Boots -->
<section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Image layer with parallax effect -->
    <div class="parallax-layer blur-[4px] absolute inset-0 -mt-1" data-speed="0.05">
        <img src="/images/lineOfBoots-opt.png" alt="Line of Boots" class="w-full h-full object-cover object-[51%_center] md:object-[center]">
    </div>
    
    <!-- Content overlay -->
    <div class="relative z-10 text-center px-4">
        <h1 class="text-8xl texture-text-paper md:text-8xl nt-bold text-cream-100 text-shadow-lg">
            <span class="font-just-me typing-text block mb-10 pb-6 texture-lightest texture-text-paper " id="firstPart">dirty boots'</span>
            <div class="relative h-[20px] flex items-center justify-center">
                <!-- Hidden placeholder text to maintain height (opacity 0) -->
                <span class="opacity-0 absolute font-unkempt" aria-hidden="true">Café</span>
                <span class="opacity-0 absolute font-coustard" aria-hidden="true">Roost</span>
                
                <!-- Actual animated text -->
                <span class="font-unkempt typing-text relative texture-text-paper texture-lightest texture-text-paper" id="secondPart"></span>
                <span class="font-coustard typing-text relative texture-text-paper texture-lightest texture-text-paper" id="thirdPart"></span>
            </div>
        </h1>

        <div class="relative py-2">
            <!-- SVG with curved text -->
            <svg class="w-full h-24 mx-auto" viewBox="0 0 800 100" preserveAspectRatio="xMidYMid meet">
                <!-- Define the path -->
                <defs>
                    <path id="curve" d="M0,80 Q400,0 800,80" />
                </defs>
                
                <!-- Apply text to the path -->
                <text class="text-[2.5rem] md:text-[2.5rem] text-shadow-lg fill-cream-400 font-gaegu" text-anchor="middle">
                    <textPath href="#curve" startOffset="50%">
                        Coffee, community, and crumbs of adventure
                    </textPath>
                </text>
            </svg>
        </div>

        <!-- a href="/menu/" class="btn-primary text-lg px-8 py-3">Our Menu</a -->
    </div>
</section>

