<ul class="space-y-2">
    {% set navItems = [
        { url: "/", text: "Home" },
        { url: "/menu/", text: "Menu" },
        { url: "/roost/", text: "The Roost" },
        { url: "/find-us/", text: "Find Us" },
        { url: "/contact/", text: "Contact" }
    ] %}
    
    {% for item in navItems %}
    <li>
        <a href="{{ item.url }}" 
           class="block px-4 py-2.5 rounded-lg text-base font-medium {% if page.url == item.url %}bg-earth-50 text-earth-600{% else %}text-earth-500 hover:bg-earth-50 hover:text-earth-600{% endif %} transition-colors duration-200">
            {{ item.text }}
        </a>
    </li>
    {% endfor %}
    
    <li class="pt-4">
        <a href="/find-us/" class="block w-full text-center btn-primary">
            Visit Us Today
        </a>
    </li>
</ul>